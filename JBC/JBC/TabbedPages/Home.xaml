<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Jerusalem Baptist Church" xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="JBC.Home">

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
            iOS="0, 20, 0, 0"/>
    </ContentPage.Padding>
    
    <StackLayout HorizontalOptions="Center" VerticalOptions="Center" >
            <Label Text="Welcome"/>
            <Button Text="About Us" Clicked="AboutUs_Clicked"/>
        
            <Button Text="Location" Clicked="Location_Clicked"/>
    </StackLayout>
    
</ContentPage>
