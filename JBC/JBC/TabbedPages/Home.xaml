        <Label Text="Welcome" 
               FontSize="40" 
               FontFamily="SinkinSans" 
               TextColor="Black" 
               AbsoluteLayout.LayoutBounds="0.5, 0.05" 
               AbsoluteLayout.LayoutFlags="PositionProportional"/>
        
        <Label x:Name="WelcomeLabel" Margin="20" FontSize="Small"
               FontFamily="SinkinSans" 
               TextColor="Black" 
               AbsoluteLayout.LayoutBounds="0.5, 0.22" 
               AbsoluteLayout.LayoutFlags="PositionProportional"/>
       
        <Button Text="About Us" 
                x:Name="btnAboutUs" 
                BackgroundColor="#4DFFFFFF" 
                TextColor="Black"  
                Clicked="AboutUs_Clicked" 
                AbsoluteLayout.LayoutBounds="0.5, 0.65" 
                AbsoluteLayout.LayoutFlags="PositionProportional"/>

        <Button Text="Location" 
                BackgroundColor="White" 
                TextColor="Red"
                Clicked="Location_Clicked"
                AbsoluteLayout.LayoutBounds="0.5, 0.75" 
                AbsoluteLayout.LayoutFlags="PositionProportional"/>

        <Label Text="Connect With Us" 
               FontSize="25" 
               FontFamily="SinkinSans" 
               TextColor="Black"
               AbsoluteLayout.LayoutBounds="0.5, 0.85" 
               AbsoluteLayout.LayoutFlags="PositionProportional"/>

