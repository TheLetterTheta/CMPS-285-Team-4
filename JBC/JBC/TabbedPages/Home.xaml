<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Jerusalem Baptist Church" 
             xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="JBC.Home"
             >

    <ContentPage.Padding>
        
        <OnPlatform x:TypeArguments="Thickness"
            iOS="0, 20, 0, 0"/>
        
    </ContentPage.Padding>

    


    <AbsoluteLayout>

        <Image x:Name="image" 
               Aspect="AspectFill"
               AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
               AbsoluteLayout.LayoutFlags="All"/>

        <!--<BoxView Color="Aqua" 
                 WidthRequest="2" 
                 HorizontalOptions="Center" 
                 VerticalOptions="Fill" 
                 AbsoluteLayout.LayoutBounds="0, 0.7, 1, 1" 
                 AbsoluteLayout.LayoutFlags="All"/>
        -->
        
        <Label Text="Welcome" 
               FontSize="40" 
               FontFamily="SinkinSans" 
               TextColor="White" 
               AbsoluteLayout.LayoutBounds="0.5, 0.1" 
               AbsoluteLayout.LayoutFlags="PositionProportional"/>

        <Button Text="About Us" 
                x:Name="btnAboutUs" 
                BackgroundColor="#4DFFFFFF" 
                TextColor="White"  
                Clicked="AboutUs_Clicked" 
                AbsoluteLayout.LayoutBounds="0.5, 0.65" 
                AbsoluteLayout.LayoutFlags="PositionProportional"/>

        <Button Text="Location" 
                BackgroundColor="White" 
                TextColor="Red"
                Clicked="Location_Clicked"
                AbsoluteLayout.LayoutBounds="0.5, 0.75" 
                AbsoluteLayout.LayoutFlags="PositionProportional"/>

        <Label Text="Connect With Us" 
               FontSize="25" 
               FontFamily="SinkinSans" 
               TextColor="White"
               AbsoluteLayout.LayoutBounds="0.5, 0.85" 
               AbsoluteLayout.LayoutFlags="PositionProportional"/>

        <!--<Label Text="Hello Forms with XAML">
            <Label.FontFamily>
                <OnPlatform x:TypeArguments="x:String">
                    <OnPlatform.iOS>SinkinSans</OnPlatform.iOS>
                    <OnPlatform.Android>SinkinSans.ttf#SinkinSans</OnPlatform.Android>
                </OnPlatform>
            </Label.FontFamily>
        </Label>
        -->

        <!-- <Label Text="SinkinSans" FontSize="25" HorizontalOptions="Center"/> -->

    </AbsoluteLayout>
    
</ContentPage>

